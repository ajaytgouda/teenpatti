<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_table"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table"
    tools:context="com.appswale.teenpatti.Activities.TableActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical"
            android:gravity="bottom">
            <LinearLayout
                android:id="@+id/segmentOne"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/user_one_image"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/user_one"
                                app:border_color="#FFFF"
                                app:border_width="1dp"/>
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="#a5000000"
                                app:border_color="#FFFF"
                                app:border_width="1dp"/>
                            <ProgressBar
                                android:id="@+id/user_one_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerHorizontal="true"
                                android:indeterminate="false"
                                android:max="20"
                                android:minHeight="50dp"
                                android:minWidth="200dp"
                                android:progress="0"
                                android:progressDrawable="@drawable/circular_progressbar" />

                            <RelativeLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp">
                                <TextView
                                    android:id="@+id/user_one_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dip"
                                    android:textSize="10dip"
                                    android:textStyle="bold"
                                    android:text="UserName"
                                    android:background="#a5000000"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:id="@+id/user_one_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dip"
                                    android:textSize="10dip"
                                    android:textStyle="bold"
                                    android:text="status"
                                    android:gravity="center"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:id="@+id/user_one_card_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dip"
                                    android:textSize="10dip"
                                    android:textStyle="bold"
                                    android:text="Card Status"
                                    android:background="#a5000000"
                                    android:layout_alignParentBottom="true"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="5dip"
                            android:layout_gravity="center_vertical">
                            <ImageView
                                android:id="@+id/user_one_card_one"
                                android:layout_width="35dip"
                                android:layout_height="50dip"
                                android:src="@drawable/s_a"/>
                            <ImageView
                                android:id="@+id/user_one_card_two"
                                android:layout_width="35dip"
                                android:layout_height="50dip"
                                android:layout_marginLeft="15dip"
                                android:src="@drawable/s_a"/>
                            <ImageView
                                android:id="@+id/user_one_card_three"
                                android:layout_width="35dip"
                                android:layout_height="50dip"
                                android:layout_marginLeft="30dip"
                                android:src="@drawable/s_a"/>
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginRight="5dip"
                            android:layout_gravity="center_vertical">
                            <ImageView
                                android:id="@+id/user_two_card_one"
                                android:layout_width="35dip"
                                android:layout_height="50dip"
                                android:src="@drawable/s_a"/>
                            <ImageView
                                android:id="@+id/user_two_card_two"
                                android:layout_width="35dip"
                                android:layout_height="50dip"
                                android:layout_marginLeft="15dip"
                                android:src="@drawable/s_a"/>
                            <ImageView
                                android:id="@+id/user_two_card_three"
                                android:layout_width="35dip"
                                android:layout_height="50dip"
                                android:layout_marginLeft="30dip"
                                android:src="@drawable/s_a"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/user_two_image"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/user_one"
                                app:border_color="#FFFF"
                                app:border_width="1dp"/>
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="#a5000000"
                                app:border_color="#FFFF"
                                app:border_width="1dp"/>
                            <ProgressBar
                                android:id="@+id/user_two_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerHorizontal="true"
                                android:indeterminate="false"
                                android:max="20"
                                android:minHeight="50dp"
                                android:minWidth="200dp"
                                android:progress="0"
                                android:progressDrawable="@drawable/circular_progressbar" />

                            <RelativeLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp">
                                <TextView
                                    android:id="@+id/user_two_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dip"
                                    android:textSize="10dip"
                                    android:textStyle="bold"
                                    android:text="UserName"
                                    android:background="#a5000000"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:id="@+id/user_two_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dip"
                                    android:textSize="10dip"
                                    android:textStyle="bold"
                                    android:text="status"
                                    android:gravity="center"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:id="@+id/user_two_card_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dip"
                                    android:textSize="10dip"
                                    android:textStyle="bold"
                                    android:text="Card Status"
                                    android:background="#a5000000"
                                    android:layout_alignParentBottom="true"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"/>
                            </RelativeLayout>
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/console"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:background="#a5000000"
                android:text="Console"
                android:textSize="8dp"
                android:padding="3dip"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dip"
                />
            <LinearLayout
                android:id="@+id/tip_button"
                android:layout_width="wrap_content"
                android:background="@drawable/button_background"
                android:padding="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:text="TIP"
                        android:textSize="8dp"
                        android:padding="5dip"
                        android:textStyle="bold"
                        android:layout_centerHorizontal="true"
                        />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">
            <LinearLayout
                android:id="@+id/segmentTwo"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="40dp"
                android:orientation="horizontal"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/user_three_image"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/user_one"
                                app:border_color="#FFFF"
                                app:border_width="1dp"/>
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="#a5000000"
                                app:border_color="#FFFF"
                                app:border_width="1dp"/>
                            <ProgressBar
                                android:id="@+id/user_three_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerHorizontal="true"
                                android:indeterminate="false"
                                android:max="20"
                                android:minHeight="50dp"
                                android:minWidth="200dp"
                                android:progress="0"
                                android:progressDrawable="@drawable/circular_progressbar" />

                            <RelativeLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp">
                                <TextView
                                    android:id="@+id/user_three_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dip"
                                    android:textSize="10dip"
                                    android:textStyle="bold"
                                    android:text="UserName"
                                    android:background="#a5000000"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:id="@+id/user_three_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dip"
                                    android:textSize="10dip"
                                    android:textStyle="bold"
                                    android:text="status"
                                    android:gravity="center"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:id="@+id/user_three_card_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dip"
                                    android:textSize="10dip"
                                    android:textStyle="bold"
                                    android:text="Card Status"
                                    android:background="#a5000000"
                                    android:layout_alignParentBottom="true"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="5dip"
                            android:layout_gravity="center_vertical">
                            <ImageView
                                android:id="@+id/user_three_card_one"
                                android:layout_width="35dip"
                                android:layout_height="50dip"
                                android:src="@drawable/s_a"/>
                            <ImageView
                                android:id="@+id/user_three_card_two"
                                android:layout_width="35dip"
                                android:layout_height="50dip"
                                android:layout_marginLeft="15dip"
                                android:src="@drawable/s_a"/>
                            <ImageView
                                android:id="@+id/user_three_card_three"
                                android:layout_width="35dip"
                                android:layout_height="50dip"
                                android:layout_marginLeft="30dip"
                                android:src="@drawable/s_a"/>
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginRight="5dip"
                            android:layout_gravity="center_vertical">
                            <ImageView
                                android:id="@+id/user_four_card_one"
                                android:layout_width="35dip"
                                android:layout_height="50dip"
                                android:src="@drawable/s_a"/>
                            <ImageView
                                android:id="@+id/user_four_card_two"
                                android:layout_width="35dip"
                                android:layout_height="50dip"
                                android:layout_marginLeft="15dip"
                                android:src="@drawable/s_a"/>
                            <ImageView
                                android:id="@+id/user_four_card_three"
                                android:layout_width="35dip"
                                android:layout_height="50dip"
                                android:layout_marginLeft="30dip"
                                android:src="@drawable/s_a"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/user_four_image"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/user_one"
                                app:border_color="#FFFF"
                                app:border_width="1dp"/>
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="#a5000000"
                                app:border_color="#FFFF"
                                app:border_width="1dp"/>
                            <ProgressBar
                                android:id="@+id/user_four_progress"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_centerHorizontal="true"
                                android:indeterminate="false"
                                android:max="20"
                                android:minHeight="50dp"
                                android:minWidth="200dp"
                                android:progress="0"
                                android:progressDrawable="@drawable/circular_progressbar" />

                            <RelativeLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp">
                                <TextView
                                    android:id="@+id/user_four_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dip"
                                    android:textSize="10dip"
                                    android:textStyle="bold"
                                    android:text="UserName"
                                    android:background="#a5000000"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:id="@+id/user_four_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dip"
                                    android:textSize="10dip"
                                    android:textStyle="bold"
                                    android:text="status"
                                    android:gravity="center"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/white"/>
                                <TextView
                                    android:id="@+id/user_four_card_status"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="3dip"
                                    android:textSize="10dip"
                                    android:textStyle="bold"
                                    android:text="Card Status"
                                    android:background="#a5000000"
                                    android:layout_alignParentBottom="true"
                                    android:gravity="center_horizontal"
                                    android:textColor="@color/white"/>
                            </RelativeLayout>
                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/segmentFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentBottom="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:background="@drawable/border"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:id="@+id/pack_button"
                android:layout_width="wrap_content"
                android:background="@drawable/button_background"
                android:padding="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginLeft="20dip"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:text="PACK"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/side_show"
                android:layout_width="wrap_content"
                android:background="@drawable/button_background"
                android:padding="10dp"
                android:layout_marginLeft="100dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:text="SHOW"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/points_background"
                android:paddingLeft="20dip"
                android:paddingRight="20dip"
                android:paddingTop="5dip"
                android:paddingBottom="5dip">
                <TextView
                    android:id="@+id/myPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="10000"
                    android:textSize="18dip"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/addcoin"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:padding="10dip"
                    android:src="@mipmap/ic_add"/>
                <LinearLayout
                    android:id="@+id/challLayout"
                    android:layout_width="wrap_content"
                    android:background="@drawable/button_background"
                    android:padding="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:layout_margin="3dip"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/challText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFFF"
                        android:textSize="8sp"
                        android:textStyle="bold"
                        android:text="CHAAL \n $400"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/minuscoin"
                    android:layout_width="50dip"
                    android:layout_marginRight="10dp"
                    android:layout_height="50dip"
                    android:padding="10dip"
                    android:src="@mipmap/ic_minus"/>
            </LinearLayout>


        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/segmentThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dip">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_five_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/user_one"
                    app:border_color="#FFFF"
                    app:border_width="1dp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="#a5000000"
                    app:border_color="#FFFF"
                    app:border_width="1dp"/>
                <ProgressBar
                    android:id="@+id/user_five_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:indeterminate="false"
                    android:max="20"
                    android:minHeight="50dp"
                    android:minWidth="200dp"
                    android:progress="0"
                    android:progressDrawable="@drawable/circular_progressbar" />

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                    <TextView
                        android:id="@+id/user_five_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dip"
                        android:textSize="10dip"
                        android:textStyle="bold"
                        android:text="UserName"
                        android:background="#a5000000"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/user_five_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="3dip"
                        android:textSize="10dip"
                        android:textStyle="bold"
                        android:text="status"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"/>

                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="70dip"
                android:layout_marginLeft="5dip"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:id="@+id/user_five_card_one"
                    android:layout_width="35dip"
                    android:layout_height="50dip"
                    android:src="@drawable/s_a"/>
                <ImageView
                    android:id="@+id/user_five_card_two"
                    android:layout_width="35dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="15dip"
                    android:src="@drawable/s_a"/>
                <ImageView
                    android:id="@+id/user_five_card_three"
                    android:layout_width="35dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="30dip"
                    android:src="@drawable/s_a"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="110dp"
                android:id="@+id/LayoutSee"
                android:layout_centerHorizontal="true"
                android:padding="8dip"
                android:background="@drawable/button_background"
                >
                <TextView
                    android:id="@+id/user_five_card_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dip"
                    android:textStyle="bold"
                    android:text="SEE"
                    android:layout_alignParentBottom="true"
