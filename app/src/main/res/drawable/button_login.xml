<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android" >


            <gradient
                android:startColor="#f55757"
                android:endColor="#990404"
                android:angle="270" />
            <corners
                android:radius="5dp"/>

            <stroke android:width="5dip"
                android:color="#f5d901"/>
        </shape>
    </item>
    <item>
        <shape>
            <corners
                android:radius="5dp"/>

            <solid android:color="#990404" />
            <stroke android:width="5dip"
                android:color="#ab9701"/>
        </shape>
    </item>
</selector>